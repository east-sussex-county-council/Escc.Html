<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>3.0.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>East Sussex County Council</Authors>
    <Company>East Sussex County Council</Company>
    <Product />
    <Description>Generic utility methods for parsing and formatting HTML</Description>
    <PackageIconUrl>https://www.eastsussex.gov.uk/apple-touch-icon.png</PackageIconUrl>
    <PackageLicenseUrl>http://www.nationalarchives.gov.uk/doc/open-government-licence/version/3/</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/east-sussex-county-council/Escc.Html</PackageProjectUrl>
    <PackageTags>html</PackageTags>
    <PackageReleaseNotes>3.0.0 changes the target framework to .NET Standard 2.0 to introduce compatibility with .NET Core 2.x, and corrects the spelling of HtmlTagSanitiser</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\Escc.Html.xml</DocumentationFile>
  </PropertyGroup>

